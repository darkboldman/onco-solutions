---
// src/layouts/MainLayout.astro
import Header from '../components/Header.astro'; // Import the component
// import Footer from '../components/Footer.astro'; // Assuming you have a Footer component too

// You might pass props like page title here
export interface Props {
    title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Onco</title>
    {/* Add links to global stylesheets if needed */}
</head>
<body>
    <Header /> {/* Use the Header component here */}

    <main>
        <slot /> {/* Page content will be injected here */}
    </main>

    <!-- <Footer /> {/* Use the Footer component here */} -->

    {/* Add global scripts if needed */}
</body>
</html>